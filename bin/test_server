#!/bin/bash

set -e

cd "$(dirname "$0")/.."

function kill_process_listening_on_port {
  lsof -i :$1 | grep LISTEN | awk '{print $2}' | xargs -r kill -9
}

echo "Starting application services"
kill_process_listening_on_port 3100
kill_process_listening_on_port 3101
kill_process_listening_on_port 3037
kill_process_listening_on_port 8298 # inngest

export NODE_TLS_REJECT_UNAUTHORIZED=0
export RAILS_ENV=test
export NODE_ENV=test
export ENABLE_DEFAULT_OTP=true

# ------------------------------------------------------------------------
# Load test environment variables BEFORE running any database operations.
# This guarantees DATABASE_URL and other critical vars are available
# when `rails db:*` tasks execute below. Silent‚Äêfail if the file is missing.
# ------------------------------------------------------------------------
if [ -f .env.test ]; then
  # shellcheck disable=SC2046       # we intentionally split on whitespace
  export $(grep -v '^#' .env.test | xargs)
fi

cd backend
bundle exec rails db:drop db:create db:schema:load db:seed_test_data
cd ..

foreman start -f Procfile.test -e .env.test
